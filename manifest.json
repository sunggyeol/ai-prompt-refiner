{
  "manifest_version": 3,
  "name": "Instant Prompt Optimizer",
  "version": "0.1.1",
  "description": "Instantly optimize your highlighted text to be better understood by AI using Google's Gemini AI",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "*://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://claude.ai/*",
        "*://perplexity.ai/*",
        "*://chatgpt.com/*",
        "*://chat.openai.com/*",
        "*://gemini.google.com/*",
        "*://grok.com/*",
        "*://google.com/*",
        "*://*.google.com/*",
        "*://bing.com/*",
        "*://*.bing.com/*",
        "*://duckduckgo.com/*",
        "*://github.com/*",
        "*://stackoverflow.com/*",
        "*://reddit.com/*",
        "*://*.reddit.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Instant Prompt Optimizer"
  }
}
